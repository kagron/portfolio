<%= form_for @project, :html => {:multipart => true} do |f| %>
  <div class="form-group">
      <%= f.label :avatar %>
      <% if @project.avatar.present? %>
        <%= image_tag project.avatar.url(:small), class: 'img-responsive' %>
      <% end %>
      <%= f.file_field :avatar %>
  </div>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">    
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: '15' %>
  </div>
  <div class="contact-btn">
    <%= f.submit 'Submit', class: 'btn btn-default contact-btn' %>
  </div>
<% end %>