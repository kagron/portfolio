<div class="container-fluid white-bg">
  <div class="about-me">
    <%= form_for @about, url: root_path(), :html => {:multipart => true} do |f| %>
      <div class="form-group">
            <%= f.label(:title, "Title") %>
            <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.label(:content, "Content") %>
            <%= f.text_area :content, class: 'form-control', rows: 12 %>
      </div>
      <p><strong>Resume</strong></p>
      <% if !@about.resume_file.nil? %>
        <%= link_to @about.resume_file_url  do %>
          <i class="fa fa-file-o"></i> View current resume
        <% end %>
      <% end %>
        <%= f.file_field :resume_file %><br/>
      <div class="resume">
        <%= f.submit 'Save', class: 'btn btn-default contact-btn btn-lg' %>
      </div>
      
    <% end %>
  </div>
</div> <!-- end gray about me -->
