<% content_for :title, "Blog - Kyle Grondin - Software Developer &amp; Graphic Designer" %>
<div class="container-fluid gray-contact blog-index">
  <div class="row">
    
    
    <div class="col-md-3 blog-left-side">
      <%= render 'leftside' %>
    </div>
    <div class="col-md-9">
      <h1>LATEST POSTS</h1>
      <% @posts.each do |post| %>
        <div class="blog-post">
          <h2>
          <%= link_to post_date_path(post.year, post.month, post.slug) do %>
            <%= post.title %>
          <% end %>
          </h2>
          <p class="blog-date"><i class="fa fa-calendar"></i> <%= post.created_at.strftime("%B %d, %Y") %></p>
          <p><%= markdown (post.content) %></p>
          <hr>
        </div>
      <% end %>
      
      
      

      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
 
    </div>
  </div>
</div>