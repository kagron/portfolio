<% content_for :title, "Kyle Grondin - Software Developer &amp; Graphic Designer" %>
<div class="container-fluid gray-contact">
  <div class="row">
    <div class="col-md-3 blog-left-side">
      <%= render 'leftside' %>
    </div>
    <div class="col-md-9">
      <h1>edit a post</h1>
      <%= form_for @post, url: post_date_path(@post.year, @post.month, @post.slug) do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">    
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control', rows: '15' %>
        </div>
        <div class="contact-btn">
          <%= link_to "Delete", delete_post_path(@post.year, @post.month, @post.slug), class: 'btn btn-danger', method: :delete, 
          data: { confirm: "Are you sure you want to delete this post?"} %>
          
          <%= f.submit 'Submit', class: 'btn btn-default contact-btn' %>
        </div>
      <% end %>
  </div>
  </div>
</div>