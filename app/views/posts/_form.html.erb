<%= form_for @post do |f| %>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">    
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: '15' %>
  </div>
  <div class="contact-btn">
    <%= f.submit 'Submit', class: 'btn btn-default contact-btn' %>
  </div>
<% end %>